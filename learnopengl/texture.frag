#version 330 core
out vec4 FragColor;

in vec3 ourColor;
in vec2 TexCoord;

uniform sampler2D texture1;
uniform sampler2D texture2;
uniform float ratio;

void main()
{
    // 翻转第二张图的x轴
//    FragColor = texture(ourTexture, TexCoord) * vec4(ourColor, 1.0);  // 混色
    FragColor = mix(texture(texture1, TexCoord), texture(texture2, vec2(-TexCoord.x, TexCoord.y)), ratio);
}
